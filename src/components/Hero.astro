---
import {
  Sparkles,
  MapPin,
  Clock,
  Activity,
  FolderGit2,
  FileText,
} from "lucide-astro";
import AuraBackground from "./AuraBackground.astro";
---

<section
  id="hero"
  class="flex hero-section min-h-[var(--hero-height-mobile)] md:min-h-[var(--hero-height-tablet)] lg:min-h-[var(--hero-height-desktop)] px-6 pt-24 pb-[4.5rem] relative overflow-hidden"
>
  <AuraBackground />

  <div
    class="max-w-[800px] mx-auto flex flex-col items-center justify-center text-center fade-in relative z-10"
  >
    <!-- Left Content -->
    <div class="flex flex-col items-center">
      <div
        class="badge badge-soft badge-primary badge-lg gap-2 mb-[1.4rem] py-4 shadow-sm"
      >
        <Sparkles size={14} />
        Open for thoughtful product problems
      </div>

      <h1
        class="text-[clamp(2.6rem,4vw,3.5rem)] leading-[1.05] tracking-tight mb-[1.1rem] bg-gradient-to-r from-base-content via-primary to-accent bg-clip-text text-transparent font-bold"
      >
        Designing calm, confident healthcare experiences.
      </h1>

      <p
        class="text-[1.02rem] max-w-[34rem] text-base-content/70 leading-[1.7] mb-[1.6rem]"
      >
        I am a lead product designer focused on turning complex health journeys
        into simple, trustworthy experiences across mobile and web products.
      </p>

      <div
        class="flex flex-wrap gap-[0.9rem] mb-[2.1rem] text-base-content/80 text-[0.9rem]"
      >
        <span class="badge badge-lg badge-soft gap-1.5 h-auto">
          <MapPin size={14} class="text-primary" />
          Bengaluru · India
        </span>
        <span class="badge badge-lg badge-soft gap-1.5 h-auto">
          <Clock size={14} class="text-primary" />
          8+ years in product design
        </span>
        <span class="badge badge-lg badge-soft gap-1.5 h-auto">
          <Activity size={14} class="text-primary" />
          Healthcare · Platforms · Tools
        </span>
      </div>

      <div class="flex flex-wrap gap-[0.9rem] mb-[1.8rem]">
        <a
          href="#work"
          class="btn btn-primary gap-2 rounded-full shadow-md hover:shadow-lg transition-all"
        >
          <FolderGit2 size={16} />
          View case studies
        </a>
        <a
          href={import.meta.env.BASE_URL + "/cv"}
          class="btn btn-outline gap-2 rounded-full"
        >
          <FileText size={16} />
          View CV
        </a>
      </div>
    </div>
  </div>
</section>
