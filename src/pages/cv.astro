---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import profileImage from "../assets/kunal-katre-photo.webp";
---

<Layout title="Résumé | Kunal Katre">
    <Navbar />

    <div
        class="min-h-screen bg-gradient-to-br from-base-200 to-primary/10 dark:from-base-100 dark:to-base-200"
    >
        <div class="max-w-6xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
            <!-- Header Section -->
            <header
                class="bg-base-100 rounded-lg shadow-lg p-8 mb-8 border border-base-200"
            >
                <div
                    class="flex flex-col lg:flex-row items-center lg:items-start gap-8"
                >
                    <!-- Photo -->
                    <div class="flex-shrink-0">
                        <img
                            src={profileImage.src}
                            alt="Kunal Katre"
                            class="w-32 h-32 lg:w-40 lg:h-40 rounded-full object-cover border-4 border-primary shadow-lg"
                            loading="lazy"
                        />
                    </div>

                    <!-- Contact Info -->
                    <div class="flex-1 text-center lg:text-left">
                        <h1
                            class="text-4xl lg:text-5xl font-bold text-base-content mb-2"
                        >
                            Kunal Katre
                        </h1>
                        <h2
                            class="text-xl lg:text-2xl text-primary font-semibold mb-4"
                        >
                            Lead Product Designer
                        </h2>

                        <div
                            class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm text-base-content/70"
                        >
                            <div
                                class="flex items-center justify-center lg:justify-start gap-2"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                <span>kunalkatre.designs@gmail.com</span>
                            </div>
                            <div
                                class="flex items-center justify-center lg:justify-start gap-2"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path>
                                </svg>
                                <span>+91-8011021483</span>
                            </div>
                            <div
                                class="flex items-center justify-center lg:justify-start gap-2"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                                <span>Bangalore, India</span>
                            </div>
                            <div
                                class="flex items-center justify-center lg:justify-start gap-2"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                    ></path>
                                </svg>
                                <a
                                    href="https://www.linkedin.com/in/kunal-katre-98a945a2/"
                                    target="_blank"
                                    class="hover:text-primary transition-colors"
                                    >linkedin.com/in/kunal-katre</a
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Summary Section -->
            <section
                class="bg-base-100 rounded-lg shadow-lg p-8 mb-8 border border-base-200"
            >
                <h2
                    class="text-2xl font-bold text-base-content mb-6 pb-2 border-b-2 border-primary"
                >
                    Professional Summary
                </h2>
                <p class="text-lg text-base-content/80 leading-relaxed">
                    Experienced Lead Product Designer with 8+ years of expertise
                    in designing end-to-end digital products for healthcare,
                    e-commerce, and education domains. Proven track record of
                    launching successful products from concept to scale, with a
                    focus on user-centered design, design systems, and
                    data-driven decision making. Passionate about creating
                    intuitive user experiences that drive business growth and
                    user satisfaction.
                </p>
            </section>

            <!-- Work Experience Section -->
            <section
                class="bg-base-100 rounded-lg shadow-lg p-8 mb-8 border border-base-200"
            >
                <h2
                    class="text-2xl font-bold text-base-content mb-6 pb-2 border-b-2 border-primary"
                >
                    Work Experience
                </h2>

                <div class="space-y-8">
                    <!-- Eka.Care -->
                    <div class="relative">
                        <div
                            class="absolute left-0 top-0 w-4 h-4 bg-blue-500 rounded-full"
                        >
                        </div>
                        <div
                            class="absolute left-2 top-4 w-0.5 h-full bg-blue-200 dark:bg-blue-800"
                        >
                        </div>

                        <div class="ml-8">
                            <div class="flex items-start gap-4 mb-3">
                                <img
                                    src="/src/assets/company-logo/eka.png"
                                    alt="Eka.Care logo"
                                    class="w-12 h-12 rounded-lg object-contain flex-shrink-0"
                                />
                                <div class="flex-1">
                                    <h3
                                        class="text-xl font-bold text-base-content"
                                    >
                                        Eka.Care (Orbi.health)
                                    </h3>
                                    <p class="text-primary font-semibold">
                                        Lead Product Designer
                                    </p>
                                    <p class="text-sm text-base-content/60">
                                        Jan 2021 – Nov 2025
                                    </p>
                                </div>
                            </div>

                            <ul class="space-y-2 text-base-content/80 ml-2">
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Architected Co-WIN vaccine flows
                                        driving <strong
                                            >20M+ downloads & #1 Play Store rank</strong
                                        > (health category), plus early ABHA adoption
                                        flows.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Founding designer for the patient app (<strong
                                            >0 → 10M+ installs, 4.7★, 70k+
                                            reviews</strong
                                        >); designed the camera-based Heart Rate
                                        Monitor, improving conversion to 75% via
                                        research-led redesign.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Built a token-based Design System with
                                        automated pipelines (<strong
                                            >Figma to Swift/Kotlin/CSS</strong
                                        >), and architected a Server-Driven UI
                                        framework that enabled rapid B2B
                                        integrations with partners like Samsung
                                        and Medanta.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Designed the 'Smart Prescription' and
                                        'Vitals' ecosystems, connecting doctor
                                        inputs to patient commerce; launched the
                                        HXNG e-commerce pilot (Design + Webflow)
                                        to validate early revenue models.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Owned marketing web stack, reducing
                                        campaign launch TAT from 1 week to <strong
                                            >less than 2 days</strong
                                        > via AI-assisted workflows.</span
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Crio.Do -->
                    <div class="relative">
                        <div
                            class="absolute left-0 top-0 w-4 h-4 bg-primary rounded-full"
                        >
                        </div>
                        <div
                            class="absolute left-2 top-4 w-0.5 h-full bg-primary/20"
                        >
                        </div>

                        <div class="ml-8">
                            <div class="flex items-start gap-4 mb-3">
                                <img
                                    src="/src/assets/company-logo/crio.jpeg"
                                    alt="Crio.Do logo"
                                    class="w-12 h-12 rounded-lg object-contain flex-shrink-0"
                                />
                                <div class="flex-1">
                                    <h3
                                        class="text-xl font-bold text-base-content"
                                    >
                                        Crio.Do
                                    </h3>
                                    <p class="text-primary font-semibold">
                                        Founding Designer
                                    </p>
                                    <p class="text-sm text-base-content/60">
                                        Nov 2019 – Jan 2021
                                    </p>
                                </div>
                            </div>

                            <ul class="space-y-2 text-base-content/80 ml-2">
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Established initial UX for the "Learn
                                        by Doing" platform, supporting <strong
                                            >1,000+ early developers</strong
                                        > and adoption across <strong
                                            >100+ campuses</strong
                                        >.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Shipped the core MVP environments that
                                        validated the business model, directly
                                        supporting the <strong
                                            >Pre-Series A funding raise</strong
                                        >.</span
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Flipkart -->
                    <div class="relative">
                        <div
                            class="absolute left-0 top-0 w-4 h-4 bg-blue-500 rounded-full"
                        >
                        </div>

                        <div class="ml-8">
                            <div class="flex items-start gap-4 mb-3">
                                <img
                                    src="/src/assets/company-logo/flipkart.svg"
                                    alt="Flipkart logo"
                                    class="w-12 h-12 rounded-lg object-contain flex-shrink-0"
                                />
                                <div class="flex-1">
                                    <h3
                                        class="text-xl font-bold text-base-content"
                                    >
                                        Flipkart
                                    </h3>
                                    <p class="text-primary font-semibold">
                                        Product Designer 2
                                    </p>
                                    <p class="text-sm text-base-content/60">
                                        Aug 2017 – Nov 2019
                                    </p>
                                </div>
                            </div>

                            <ul class="space-y-2 text-base-content/80 ml-2">
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Redesigned seller listing platform with
                                        high-density UI and bulk-editing for <strong
                                            >100,000+ SKUs</strong
                                        >.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Delivered data-driven promotions tool
                                        with predictive analytics and
                                        personalized recommendations.</span
                                    >
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-primary mt-1">•</span>
                                    <span
                                        >Contributed to early <strong
                                            >Marketplace Design System</strong
                                        >, establishing consistent patterns at
                                        scale.</span
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Skills Section -->
            <section
                class="bg-base-100 rounded-lg shadow-lg p-8 mb-8 border border-base-200"
            >
                <h2
                    class="text-2xl font-bold text-base-content mb-6 pb-2 border-b-2 border-primary"
                >
                    Skills & Expertise
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-lg font-semibold text-primary mb-3">
                            Core & Systems
                        </h3>
                        <p class="text-base-content/80">
                            Product Strategy, End-to-End UX, 0-to-1 Product
                            Launch, B2B2C Platforms, Data-Driven Design, Design
                            Systems, Server-Driven UI, Design Ops, Rapid
                            Prototyping
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold text-primary mb-3">
                            Research & AI
                        </h3>
                        <p class="text-base-content/80">
                            Usability Testing, A/B Experimentation, User Journey
                            Mapping, Accessibility (WCAG), LLM Context
                            Management, Model Fine-tuning, Prompt Engineering,
                            Local LLM Deployment
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold text-primary mb-3">
                            Design & Build
                        </h3>
                        <p class="text-base-content/80">
                            Figma (Variables, Auto-Layout), Token Studio, Style
                            Dictionary, FigJam, Webflow, Framer, HTML/CSS
                            (Basic), GitHub (for Design Systems & webpage)
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold text-primary mb-3">
                            AI & Analytics
                        </h3>
                        <p class="text-base-content/80">
                            AI Workflows (for research/assets), Napkin.ai,
                            Cursor (simple code edits), UserTesting,
                            Hotjar/Mixpanel, Google Analytics
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold text-primary mb-3">
                            Domain Expertise
                        </h3>
                        <p class="text-base-content/80">
                            Healthcare (Patient & Provider), E-commerce (B2B),
                            EdTech
                        </p>
                    </div>
                </div>
            </section>

            <!-- Education Section -->
            <section
                class="bg-base-100 rounded-lg shadow-lg p-8 mb-8 border border-base-200"
            >
                <h2
                    class="text-2xl font-bold text-base-content mb-6 pb-2 border-b-2 border-primary"
                >
                    Education
                </h2>

                <div class="flex items-start gap-4">
                    <img
                        src="https://logo.clearbit.com/iitg.ac.in"
                        alt="IIT Guwahati logo"
                        class="w-16 h-16 rounded-lg object-contain flex-shrink-0"
                    />
                    <div>
                        <h3 class="text-xl font-bold text-base-content">
                            Indian Institute of Technology (IIT), Guwahati
                        </h3>
                        <p class="text-primary font-semibold mb-1">
                            Bachelor of Design (B.Des) with Minor in Mechanical
                            Engineering
                        </p>
                        <p class="text-sm text-base-content/60">
                            Jun 2013 – Jun 2017
                        </p>
                        <p class="text-sm text-base-content/60">CGPI: 8.12</p>
                    </div>
                </div>
            </section>

            <!-- Download Resume Button -->
            <div class="text-center">
                <a
                    href={import.meta.env.BASE_URL +
                        "/assets/Kunal_Katre_Resume.pdf"}
                    download="Kunal_Katre_Resume.pdf"
                    class="inline-flex items-center gap-2 bg-primary hover:bg-primary/80 text-primary-content font-semibold py-3 px-6 rounded-lg transition-colors shadow-lg"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                        ></path>
                    </svg>
                    Download Full Resume
                </a>
            </div>
        </div>
    </div>
</Layout>
